#!/usr/bin/env python3

import copy
import datetime
import http.server
import json
import socket
import struct
import threading
import urllib.parse

__author__     = "Brian Rzycki"
__copyright__  = "Copyright 2021, Brian Rzycki"
__credits__    = [ "Brian Rzycki" ]
